---
layout: layouts/base.njk
---


<section class='section-padding' style='padding-top: 8em'>
    <div class='container prose'>
      {% if title %}
        <h2>{{title}}</h2>
      {% endif %}
      <small>
        <em>Posted on 
            <time class="postlist-date" datetime="{{ page.date | htmlDateString }}">
                {{ page.date | readableDate }}
            </time>
        </em>
    </small>
    
    {% include 'partials/tags.njk' %}
    
    <br>
    
    {{excerpt}}
    {{content | safe}}
    </div>
  </section>


